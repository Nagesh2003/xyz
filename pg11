package pg11;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.annotations.Test;

import java.util.List;

public class CountObjects {
    WebDriver driver;

    @Test(priority = 1)
    void openBrowser() throws InterruptedException {
        System.out.println("ğŸš€ Opening Chrome browser...");
        driver = new ChromeDriver();

        System.out.println("ğŸŒ Navigating to https://www.demoblaze.com/ ...");
        driver.get("https://www.demoblaze.com/");

        Thread.sleep(2000); // wait 2 seconds

        System.out.println("ğŸ” Maximizing browser window...");
        driver.manage().window().maximize();

        Thread.sleep(2000); // wait 2 seconds
    }

    @Test(priority = 2)
    void countObjects() throws InterruptedException {
        System.out.println("ğŸ“¦ Counting all elements on the page...");
        List<WebElement> elements = driver.findElements(By.xpath("//*"));

        Thread.sleep(2000); // wait 2 seconds

        System.out.println("ğŸ”¢ Total number of elements on the page: " + elements.size());

        Thread.sleep(2000); // wait 2 seconds
    }

    @Test(priority = 3)
    void closeBrowser() throws InterruptedException {
        System.out.println("ğŸšª Closing the browser...");

        Thread.sleep(2000); // wait 2 seconds

        if (driver != null) {
            driver.quit();
        }

        System.out.println("âœ… Browser closed.");
    }
}
